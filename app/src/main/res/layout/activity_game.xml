<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background"
        android:scaleType="fitXY" />


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="126dp"
        android:scaleType="fitXY"
        android:src="@drawable/top" />


    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="53dp"
        android:layout_height="53dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:onClick="home"
        android:background="@drawable/back_sel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="190dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageButton2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageButton2">

        <ImageView
            android:id="@+id/life1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/life" />

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/life2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/life" />

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/life3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/life" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:scaleType="fitXY"
        android:src="@drawable/counter"
        app:layout_constraintTop_toBottomOf="@id/imageView4"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rubik_semibold"
        android:text="1/20"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/imageView3" />

    <ImageView
        android:id="@+id/flagsFrame"
        android:layout_width="368dp"
        android:layout_height="284dp"
        android:src="@drawable/flags_frame"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.145" />

    <TextView
        android:id="@+id/country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rubik_semibold"
        android:text="Country"
        android:layout_marginTop="15dp"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/flagsFrame" />


    <ImageView
        android:id="@+id/flag"
        android:layout_width="300dp"
        android:layout_height="196dp"
        app:layout_constraintBottom_toBottomOf="@+id/flagsFrame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/flagsFrame"
        app:layout_constraintVertical_bias="0.865"/>

    <ImageButton
        android:id="@+id/color2"
        android:layout_width="300dp"
        android:layout_height="196dp"
        app:layout_constraintBottom_toBottomOf="@+id/flagsFrame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/flagsFrame"
        app:layout_constraintVertical_bias="0.865" />

    <ImageButton
        android:id="@+id/color1"
        android:layout_width="300dp"
        android:layout_height="196dp"
        app:layout_constraintBottom_toBottomOf="@+id/flagsFrame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/flagsFrame"
        app:layout_constraintVertical_bias="0.865" />


    <ImageView
        android:id="@+id/helpFlag"
        android:layout_width="300dp"
        android:layout_height="196dp"
        app:layout_constraintBottom_toBottomOf="@+id/flagsFrame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/flagsFrame"
        app:layout_constraintVertical_bias="0.865"/>




    <RadioGroup
        android:id="@+id/linearLayout2"
        android:layout_width="330dp"
        android:layout_height="45dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flagsFrame"
        app:layout_constraintVertical_bias="0.081">

        <RadioButton
            android:id="@+id/yellow"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/yellow_sel"
            android:button="@android:color/transparent"
            android:thumbTint="#00FFFFFF"
            android:trackTint="#00FFFFFF" />

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <RadioButton
            android:id="@+id/orange"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/orange_sel"
            android:button="@android:color/transparent"
            android:thumbTint="#00FFFFFF"
            android:trackTint="#00FFFFFF" />

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <RadioButton
            android:id="@+id/red"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/red_sel"
            android:button="@android:color/transparent"
            android:thumbTint="#00FFFFFF"
            android:trackTint="#00FFFFFF" />

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <RadioButton
            android:id="@+id/green"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/green_sel"
            android:button="@android:color/transparent"
            android:thumbTint="#00FFFFFF"
            android:trackTint="#00FFFFFF" />

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <RadioButton
            android:id="@+id/blue"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/blue_sel"
            android:button="@android:color/transparent"
            android:thumbTint="#00FFFFFF"
            android:trackTint="#00FFFFFF" />

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <RadioButton
            android:id="@+id/darkBlue"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/darkblue_sel"
            android:button="@android:color/transparent"
            android:thumbTint="#00FFFFFF"
            android:trackTint="#00FFFFFF" />

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <RadioButton
            android:id="@+id/gray"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/black_sel"
            android:button="@android:color/transparent"
            android:thumbTint="#00FFFFFF"
            android:trackTint="#00FFFFFF" />
    </RadioGroup>

    <ImageButton
        android:layout_width="198dp"
        android:layout_height="64dp"
        android:background="@drawable/skip_sel"
        android:onClick="skip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    <ImageView
        android:id="@+id/confiti"
        android:layout_width="381dp"
        android:layout_height="509dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>